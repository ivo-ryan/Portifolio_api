{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",                  
    "lib": ["ES2020"],
    "outDir": "./build",
    "rootDir": "./src",

    "types": ["node"],                     
    "esModuleInterop": true,
    "moduleResolution": "node",

    "strict": true,
    "skipLibCheck": true
    
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
